<Window x:Class="ThirdLesson_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThirdLesson_Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Width="600" Height="300" Margin="0,0,0,60" Source="{Binding CurrentImage}"></Image>
        <Button Command="{Binding ConnectClickCommand}" Width="200" Height="50" Content="CONNECT" FontSize="25" FontWeight="ExtraBlack" VerticalAlignment="Bottom" Margin="0,0,0,20"></Button>
    </Grid>
</Window>
